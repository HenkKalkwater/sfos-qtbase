#
# QMake macros
#

%_qt_prefix         %{_prefix}
%_qt_bindir         %{_prefix}/bin
%_qt_libdir         %{_prefix}/%{_lib}
%_qt_docdir         %{_prefix}/share/doc/qt5
%_qt_headerdir      %{_prefix}/include/qt5
%_qt_datadir        %{_prefix}/share/qt5
%_qt_plugindir      %{_prefix}/%{_lib}/qt5/plugins
%_qt_importdir      %{_prefix}/%{_lib}/qt5/imports
%_qt_translationdir %{_prefix}/share/qt5/translations
%_qt_sysconfdir     %{_sysconfdir}/xdg
%_qt_demosdir       %{_prefix}/%{_lib}/qt5/demos
%_qt_examplesdir    %{_prefix}/%{_lib}/qt5/examples

%qmake \
  qmake -makefile -nocache \\\
  "QMAKE_CFLAGS_RELEASE=${CFLAGS:-%optflags}" \\\
  "QMAKE_CFLAGS_DEBUG=${CFLAGS:-%optflags}" \\\
  "QMAKE_CXXFLAGS_RELEASE=${CXXFLAGS:-%optflags}" \\\
  "QMAKE_CXXFLAGS_DEBUG=${CXXFLAGS:-%optflags}" \\\
  QMAKE_STRIP=: \\\
  PREFIX=%{_prefix}

%qmake_install make install INSTALL_ROOT=%{buildroot}

